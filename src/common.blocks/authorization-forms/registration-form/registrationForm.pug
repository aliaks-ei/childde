include ../../buttons/base-button/baseButton
include ../../svg-icon/svgIcon

.authorization-form.auth-form
  form.auth-form__main-content(autocomplete="off", novalidate)
    .auth-form__field-wrapper
      label.auth-form__field-label(for="email") Email
      input.auth-form__field(type="email", id="email", name="email", pattern=".+@.+\..+$", required)
      span.auth-form__field__error-message Please enter a valid email address
    .auth-form__field-wrapper
      label.auth-form__field-label(for="nickname") Nickname
      input.auth-form__field(type="text", id="nickname", name="nickname", required)
      span.auth-form__field__error-message
    .auth-form__field-wrapper
      label.auth-form__field-label(for="password") Password
      input.auth-form__field(type="password", id="password", name="password", required)
      span.auth-form__field__error-message
    .auth-form__field-wrapper
      label.auth-form__field-label(for="passConfirm") Password again
      input.auth-form__field(type="password", id="passConfirm", name="passConfirm", required)
      span.auth-form__field__error-message
    label.auth-form__checkbox-wrapper I agree with the terms of service and privacy policy
      input.auth-form__checkbox-input(type="checkbox", required)
      span.auth-form__checkbox
        span.material-icons-round done
    +baseButton({ text: 'Registration', withArrow: true })(class="auth-form__action-btn", type="submit")
    button.auth-form__sign-in-with-social(type="button")
      +svgIcon('facebook-colored')
      | Log in with Facebook
    button.auth-form__sign-in-with-social(type="button")
      +svgIcon('google-colored')
      | Log in with Google
  .auth-form__footer-wrapper
    .auth-form__footer
      p.auth-form__footer__info
        | Already have an account?&nbsp;
        a.auth-form__footer__link(href="/login") Log in
