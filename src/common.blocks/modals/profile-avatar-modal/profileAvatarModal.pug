  .base-modal.profile-avatar-modal
    .base-modal__top-controls
      button.base-icon-btn.base-modal__close-btn(data-target-close="profileAvatarModal")
        span.material-icons-round keyboard_backspace
    .profile-avatar-modal__header
      h2.profile-avatar-modal__title Profilbild und Profilname Ã¤ndern
      button.base-icon-btn.profile-avatar-modal__close-btn(data-target-close="profileAvatarModal")
        span.material-icons-round close
    .profile-avatar-modal__image-uploader.avatar-image-uploader
      .avatar-image-uploader__current-avatar
        svg(xmlns='http://www.w3.org/2000/svg' width='96.911' height='104.848' viewbox='0 0 96.911 104.848')
          g(transform='translate(0 0.162)')
            circle(cx='23.5' cy='23.5' r='23.5' transform='translate(24.305 -0.162)' fill='#fff')
